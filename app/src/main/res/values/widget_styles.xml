<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the style for all selection buttons -->
    <style name="selectionButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="characterButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="questionButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/question_button_texture</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>