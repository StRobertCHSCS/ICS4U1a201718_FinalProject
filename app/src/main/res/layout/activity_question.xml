<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team_infinity.boundless_manifest.QuestionActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/Choice1"
        android:layout_width="105dp"
        android:layout_height="64dp"
        android:layout_marginTop="52dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/Question"
        tools:layout_editor_absoluteX="64dp" />

    <Button
        android:id="@+id/Choice2"
        android:layout_width="105dp"
        android:layout_height="64dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="52dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/Choice1"
        app:layout_constraintTop_toBottomOf="@+id/Question" />

    <Button
        android:id="@+id/Choice3"
        android:layout_width="105dp"
        android:layout_height="64dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="test"
        app:layout_constraintStart_toEndOf="@+id/Choice4"
        app:layout_constraintTop_toBottomOf="@+id/Choice2" />

    <Button
        android:id="@+id/Choice4"
        android:layout_width="105dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/Choice1"
        tools:layout_editor_absoluteX="64dp" />

    <TextView
        android:id="@+id/Question"
        android:layout_width="304dp"
        android:layout_height="73dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="150dp" />
</android.support.constraint.ConstraintLayout>
