<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout_heros"
        android:layout_width="368dp"
        android:layout_height="406dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="64dp">

        <TableRow
            android:id="@+id/tableRow_heros_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <TextView
        android:id="@+id/textView_chooseHero"
        android:layout_width="289dp"
        android:layout_height="33dp"
        android:layout_marginBottom="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/choose"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout_heros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton_ok"
        style="@style/selectionButtonTheme"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="488dp"
        android:adjustViewBounds="false"
        android:backgroundTint="@android:color/transparent"
        android:cropToPadding="false"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_template2_ok" />
</android.support.constraint.ConstraintLayout>